---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { t } from '../../i18n/utils';

const lang = 'en';

const publicationsData = await getCollection('publications');
const publications = publicationsData[0]?.data || [];

// Sort by year descending
const sortedPublications = [...publications].sort((a, b) => b.year - a.year);

const title = t(lang, 'publications.title');
const description = t(lang, 'publications.description');
---

<BaseLayout title={title} description={description} lang={lang}>
  <div class="py-16 lg:py-24">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="mb-12">
        <h1 class="text-3xl lg:text-4xl font-bold text-ibm-blue-90 mb-4">
          {title}
        </h1>
        <p class="text-lg text-ibm-blue-70">
          {description}
        </p>
      </div>

      <!-- Publications List -->
      <div class="space-y-8">
        {sortedPublications.map((pub, index) => (
          <article class="bg-white rounded-xl shadow-sm border border-ibm-blue-20 p-6 lg:p-8">
            <div class="flex flex-wrap items-start justify-between gap-4 mb-4">
              <span class="inline-flex items-center px-3 py-1 bg-ibm-blue-60 text-white text-sm font-medium rounded-full">
                {pub.year}
              </span>
              <a
                href={`https://doi.org/${pub.doi}`}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center text-sm text-ibm-blue-60 hover:text-ibm-blue-70 transition-colors"
              >
                DOI: {pub.doi}
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </div>

            <h2 class="text-xl font-semibold text-ibm-blue-90 mb-2">
              {pub.title}
            </h2>

            <p class="text-ibm-blue-60 mb-4">
              <span class="font-medium">{pub.journal}</span>
            </p>

            {pub.authors && (
              <p class="text-sm text-ibm-blue-50 mb-4">
                {pub.authors.join(', ')}
              </p>
            )}

            {pub.abstract && (
              <details class="group">
                <summary class="cursor-pointer text-ibm-blue-60 hover:text-ibm-blue-70 transition-colors font-medium">
                  <span class="inline-flex items-center">
                    {t(lang, 'publications.abstract')}
                    <svg class="w-4 h-4 ml-1 transform group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                  </span>
                </summary>
                <p class="mt-4 text-ibm-blue-70 leading-relaxed">
                  {pub.abstract}
                </p>
              </details>
            )}
          </article>
        ))}
      </div>

      <!-- ORCID Link -->
      <div class="mt-12 text-center">
        <a
          href="https://orcid.org/0009-0001-1857-5043"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-6 py-3 bg-ibm-blue-10 text-ibm-blue-70 rounded-lg hover:bg-ibm-blue-20 transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0C5.372 0 0 5.372 0 12s5.372 12 12 12 12-5.372 12-12S18.628 0 12 0zM7.369 4.378c.525 0 .947.431.947.947s-.422.947-.947.947a.95.95 0 0 1-.947-.947c0-.525.422-.947.947-.947zm-.722 3.038h1.444v10.041H6.647V7.416zm3.562 0h3.9c3.712 0 5.344 2.653 5.344 5.025 0 2.578-2.016 5.025-5.325 5.025h-3.919V7.416zm1.444 1.303v7.444h2.297c3.272 0 4.022-2.484 4.022-3.722 0-2.016-1.284-3.722-4.097-3.722h-2.222z"/>
          </svg>
          View full ORCID profile
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
